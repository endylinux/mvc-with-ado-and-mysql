@using MVCWithADO.Utilities
<!DOCTYPE html>
<html>
<head>
	<!-- Global site tag (gtag.js) - Google Analytics -->
	<script async src="https://www.googletagmanager.com/gtag/js?id=UA-121629535-1"></script>
	<script>
  window.dataLayer = window.dataLayer || [];
  function gtag(){dataLayer.push(arguments);}
  gtag('js', new Date());

  gtag('config', 'UA-121629535-1');
	</script>

	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewBag.Title</title>

	@Styles.Render("~/Content/css")
	@*@Scripts.Render("~/bundles/modernizr")*@
</head>
<body>
	<nav class="navbar navbar-expand-lg navbar-dark bg-dark navbar-fixed-top" role="navigation">
		@Html.ActionLink("ASP.NET Tuts", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
		<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#mainNav" aria-controls="mainNav" aria-expanded="false" aria-label="Toggle navigation">
			<span class="navbar-toggler-icon"></span>
		</button>
		<div class="navbar-collapse collapse" id="mainNav">
			<ul class="navbar-nav mr-auto">
				<li class="nav-item @Html.IsActive("Home","Index")">@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link" })</li>
				<li class="nav-item @Html.IsActive("Student","Index")">@Html.ActionLink("Student-List", "Index", "Student", new { area = "" }, new { @class = "nav-link" })</li>
				<li class="nav-item @Html.IsActive("Home","About")">@Html.ActionLink("About", "About", "Home", new { area = "" }, new { @class = "nav-link" })</li>
				<li class="nav-item @Html.IsActive("Home","Contact")">@Html.ActionLink("Contact", "Contact", "Home", new { area = "" }, new { @class = "nav-link" })</li>
			</ul>
		</div>
	</nav>
	<div class="container body-content">
		<div class="spacer-50"></div>
		<div class="row">
			@RenderBody()
		</div>
	</div>

	<footer>
		<hr />
		<p class="text-center">&copy; <b>@DateTime.Now.Year</b> | <b>@HttpContext.Current.Request.Url.Host</b></p>
	</footer>


	@Scripts.Render("~/bundles/jquery")
	@Scripts.Render("~/bundles/bootstrap")
	@RenderSection("scripts", required: false)
	@Html.Partial("CookieOverlayPage")
</body>
</html>
