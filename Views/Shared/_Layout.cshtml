
<!DOCTYPE html>
<html>
<head>
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	@*<title>@ViewBag.Title</title>*@
	@RenderSection("metatags", false)

	@Styles.Render("~/Content/css")
	@*@Scripts.Render("~/bundles/modernizr")*@
</head>
<body>
	<nav class="navbar navbar-expand-lg navbar-dark bg-dark navbar-fixed-top" role="navigation">
		@Html.ActionLink("ASP.NET Tuts", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
		<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#mainNav" aria-controls="mainNav" aria-expanded="false" aria-label="Toggle navigation">
			<span class="navbar-toggler-icon"></span>
		</button>
		@Html.Action("Menu", "Navigation")
	</nav>


	<div class="container body-content">
		<div class="spacer-50"></div>
		<div class="row">
			@RenderBody()
		</div>
	</div>

	<footer>
		<div class="footer">
			<p class="text-center">&copy; <b>@DateTime.Now.Year</b> | <b>@HttpContext.Current.Request.Url.Host</b></p>
		</div>
	</footer>


	@Scripts.Render("~/bundles/jquery")
	@Scripts.Render("~/bundles/bootstrap")
	@RenderSection("scripts", required: false)
	@Html.Partial("CookieOverlayPage")
</body>
</html>
