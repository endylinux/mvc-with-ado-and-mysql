
@model System.Data.DataTable

@{
	ViewBag.Title = "Edit View Student";
}

<div class="container">
	<h2 class="mt-5">Edit Student with name: @Model.Rows[0]["StudentName"]</h2>
	<div class="spacer-10"></div>
	<form class="form-horizontal" id="frmDetail" method="post" action="@Url.Action("UpdateRecord")">
		<div class="form-group row">
			<label class="col-sm-2 col-form-label" for="name">Edit Name:</label>
			<div class="col-sm-4">
				<input name="txtName" class="form-control" value="@Model.Rows[0]["StudentName"]" />
			</div>
		</div>
		<div class="form-group row">
			<label class="col-sm-2 col-form-label" for="age">Edit Age:</label>
			<div class="col-sm-4">
				<input name="txtAge" class="form-control" value="@Model.Rows[0]["StudentAge"]" />
			</div>
		</div>

		<fieldset class="form-group">
			<div class="row">
				<legend class="col-sm-2 col-form-label pt-0">Edit Gender:</legend>
				<div class="col-sm-6">
					@if (Model.Rows[0]["StudentGender"].ToString().ToLower() == "male")
					{

						<div class="form-check">
							<input class="form-check-input" type="radio" name="txtGender" value="male" checked /> @Html.Raw("Male")
						</div>
						<div class="form-check">
							<input class="form-check-input" type="radio" name="txtGender" value="female" /> @Html.Raw("Female")
						</div>
					}
					else
					{
						<div class="form-check">
							<input class="form-check-input" type="radio" name="txtGender" value="male"> @Html.Raw("Male")
						</div>
						<div class="form-check">
							<input class="form-check-input" type="radio" name="txtGender" value="female" checked /> @Html.Raw("Female")
						</div>

					}
				</div>
				</div>
		</fieldset>
		<div class="form-group row">
			<label class="col-sm-2 col-form-label" for="age">&nbsp;</label>
			<div class="col-sm-4">
				<input type="hidden" name="hdnID" value="@Model.Rows[0]["StudentId"]" />
				<br />
				<input type="submit" value="Submit" name="action" OnClientClick="return confirm()" />
				<input type="submit" value="Cancel" name="action" />
			</div>
		</div>
		
	</form>
</div>

<script type="text/javascript">
	function confirm() {
		return confirm("Are you sure you want to submit ?");
	}
</script>
